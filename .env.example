# OpenAI API Key for voice recognition
OPENAI_API_KEY=your_api_key_here

# Picovoice Access Key for wake word detection
# Get from: https://console.picovoice.ai/
PICOVOICE_ACCESS_KEY=your_picovoice_key_here

# Spotify API credentials (Primary music source)
# Get from: https://developer.spotify.com/dashboard
SPOTIFY_CLIENT_ID=your_spotify_client_id_here
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret_here

# ACRCloud credentials for song recognition (Vinyl mode only)
# Get from: https://console.acrcloud.com/
ACRCLOUD_ACCESS_KEY=your_acrcloud_key_here
ACRCLOUD_ACCESS_SECRET=your_acrcloud_secret_here
ACRCLOUD_HOST=identify-us-west-2.acrcloud.com
